# NeonHub v3.0 Environment Variables
# Copy to .env and fill with actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/neonhub?schema=public

# API & Site URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Authentication (generate: openssl rand -base64 32)
NEXTAUTH_SECRET=your-random-32-char-secret-here
GITHUB_ID=your-github-oauth-client-id
GITHUB_SECRET=your-github-oauth-client-secret

# AI Services
OPENAI_API_KEY=sk-proj-your-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# Email
RESEND_API_KEY=re_your-key
SENDGRID_API_KEY=SG.your-key

# Server
NODE_ENV=development
PORT=3001
CORS_ORIGINS=http://localhost:3000
