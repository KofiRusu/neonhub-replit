{
  "name": "@neonhub/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript/JavaScript SDK for NeonHub AI Marketing Platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./mocks": {
      "import": "./dist/mocks/index.mjs",
      "require": "./dist/mocks/index.js",
      "types": "./dist/mocks/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts src/mocks/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/client.ts src/mocks/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "example:mock": "tsx examples/mock-usage.ts",
    "validate": "bash examples/validation.sh",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "keywords": [
    "neonhub",
    "ai",
    "marketing",
    "automation",
    "sdk",
    "typescript",
    "agent",
    "campaign",
    "content-generation"
  ],
  "author": "NeonHub Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeonHub3A/neonhub",
    "directory": "core/sdk"
  },
  "bugs": {
    "url": "https://github.com/NeonHub3A/neonhub/issues"
  },
  "homepage": "https://neonhubecosystem.com",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@neonhub/orchestrator-contract": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@prisma/client": "^5.22.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
