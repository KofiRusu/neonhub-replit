{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ui && npm run build",
  "devCommand": "cd ui && npm run dev",
  "installCommand": "cd ui && npm install",
  "outputDirectory": "ui/.next",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet . ui/",
  "regions": ["iad1"],
  "env": {
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "NEXTAUTH_URL": "@nextauth-url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@next-public-api-url",
      "NEXT_PUBLIC_WS_URL": "@next-public-ws-url"
    }
  },
  "functions": {
    "ui/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-backend-api.vercel.app/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}

