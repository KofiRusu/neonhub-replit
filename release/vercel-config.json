{
  "name": "neonhub-web-v3",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd apps/web && npm run build",
  "devCommand": "cd apps/web && npm run dev",
  "installCommand": "npm ci",
  "outputDirectory": "apps/web/.next",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "API base URL (e.g., https://api.your-domain.com)",
      "required": true
    },
    "NEXTAUTH_URL": {
      "description": "Web application URL (e.g., https://your-domain.com)",
      "required": true
    },
    "NEXTAUTH_SECRET": {
      "description": "NextAuth secret from production secrets file",
      "required": true
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.your-domain.com/api/:path*"
    }
  ]
}