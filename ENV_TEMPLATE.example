# NeonHub v3.0 Environment Variables Template
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/neonhub?schema=public

# Auth and API URLs
NEXTAUTH_SECRET=replace_me_with_random_32_char_string
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# OpenAI
OPENAI_API_KEY=sk-proj-...

# Billing (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email Services
RESEND_API_KEY=re_...
SENDGRID_API_KEY=SG...

# SMS/Communication
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# Social Media APIs (for TrendAgent)
TWITTER_API_KEY=...
TWITTER_API_SECRET=...
TWITTER_BEARER_TOKEN=...
REDDIT_CLIENT_ID=...
REDDIT_CLIENT_SECRET=...
REDDIT_USER_AGENT=NeonHub/3.0

# Monitoring
SENTRY_DSN=https://...

# Node Environment
NODE_ENV=development

