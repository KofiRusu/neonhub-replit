{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "../../",
    "paths": {
      "@/*": ["apps/api/src/*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@neonhub/predictive-engine": ["modules/predictive-engine/src"],
      "@neonhub/ai-governance": ["core/ai-governance/src"],
      "@neonhub/orchestrator-global": ["core/orchestrator-global/src"],
      "@neonhub/data-trust": ["core/data-trust/src"],
      "@neonhub/eco-optimizer": ["core/eco-optimizer/src"]
    },
    "types": ["node", "jest"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "../../apps/web/**/*",
    "../../core/ai-economy/**/*",
    "../../core/cognitive-infra/**/*",
    "../../core/data-trust/**/*",
    "../../core/eco-optimizer/**/*",
    "../../core/federation/**/*",
    "../../core/mesh-resilience/**/*",
    "../../core/orchestrator-global/**/*",
    "../../core/qa-sentinel/**/*"
  ]
}
