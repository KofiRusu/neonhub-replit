{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "../../",
    "paths": {
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"]
    },
    "types": ["node", "jest"],
    "noImplicitAny": false
  },
  "include": ["src/**/*", "../../core/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
